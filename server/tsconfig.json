{
    "compilerOptions": {
        "strict": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowJs": true,
        "target": "ESNext",
        "lib": ["es5", "es6", "dom"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    }
}
